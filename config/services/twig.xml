<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true" autoconfigure="true" public="false" />

        <prototype namespace="App\Twig\" resource="../../src/Twig" />

        <service id="App\Twig\AdminReportRuntime">
            <tag name="twig.runtime" />
        </service>

        <service id="App\Twig\AdherentMessageRuntime" />

        <service id="App\Twig\AdherentRuntime">
            <argument key="$interests">%adherent_interests%</argument>
            <tag name="twig.runtime" />
        </service>

        <service id="Twig\Extensions\IntlExtension" />

        <!-- Twig runtimes must be tagged -->
        <service id="App\Twig\AssetRuntime">
            <argument type="service" id="router" />
            <argument type="service" id="twig.extension.assets" />
            <argument>%kernel.secret%</argument>
            <argument>%kernel.environment%</argument>
            <argument>%assets_hash%</argument>
            <tag name="twig.runtime" />
        </service>

        <service id="App\Twig\CommitteeRuntime">
            <argument type="service" id="security.authorization_checker"/>
            <argument type="service" id="App\Repository\CommitteeCandidacyRepository"/>
            <argument type="service" id="app.committee.manager"/>
            <tag name="twig.runtime" />
        </service>

        <service id="App\Twig\ElectionVoteResultRuntime">
            <argument type="service" id="App\Election\ElectionManager"/>
            <tag name="twig.runtime" />
        </service>

        <service id="App\Twig\CitizenProjectRuntime">
            <tag name="twig.runtime"/>
        </service>

        <service id="App\Twig\FormRuntime">
            <tag name="twig.runtime"/>
        </service>

        <service id="App\Twig\MarkdownRuntime">
            <tag name="twig.runtime" />
        </service>

        <service id="App\Twig\MunicipalSiteRuntime">
            <argument type="service" key="$cache">
                <service class="Symfony\Component\Cache\Simple\Psr6Cache">
                    <argument type="service" id="app.cache.municipal_site" />
                </service>
            </argument>
            <tag name="twig.runtime" />
        </service>

        <service id="App\Twig\ReportRuntime">
            <tag name="twig.runtime" />
        </service>

        <service id="App\Twig\AnonymousRuntime">
            <tag name="twig.runtime" />
        </service>

        <service id="App\Twig\CitizenActionExtension" />

        <service id="App\Twig\CitizenActionRuntime">
            <argument type="service" id="security.authorization_checker"/>
            <tag name="twig.runtime"/>
        </service>

        <service id="App\Twig\PaymentExtension" />

        <service id="App\Twig\EventRuntime">
            <tag name="twig.runtime"/>
        </service>

        <service id="App\Twig\IdeasWorkshopRuntime">
            <tag name="twig.runtime" />
        </service>

        <service id="App\Twig\CanaryExtension">
            <argument key="$canaryMode">%env(ENABLE_CANARY)%</argument>
        </service>

    </services>
</container>
