<div class="candidate__box l__row b__nudge--bottom-medium">
    <div class="box__content l__row">
        <div class="candidate-photo avatar-initials avatar--medium avatar--style-01">
            {% if candidate.imagePath %}
                <img src="{{ path('asset_url', {path: candidate.imagePath}) }}" alt="photo" />
            {% else %}
                {{ candidate.firstName[:1] }}{{ candidate.lastName[:1] }}
            {% endif %}
        </div>

        <div class="candidate-infos l__col">
            <div class="l__row l__row--h-stretch">
                <h4 class="candidate-name b__nudge--bottom-tiny b__nudge--left">
                    {{ candidate.firstName }} {{ candidate.lastName }}
                </h4>
            </div>
        </div>
    </div>
</div>
