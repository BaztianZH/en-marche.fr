{% extends '@SonataAdmin/CRUD/base_show.html.twig' %}

{% block title %}
    Demande de certification de <b>{{ admin.toString(object)|truncate(25) }}</b>
{% endblock %}

{% block show %}
    <div class="row">
        <div class="col-md-12">
            {{ form_start(form) }}
            <div class="box box-solid box-danger">
                <div class="box-header">
                    <h4 class="box-title">
                        Refus de la demande de certification de <b>{{ object.adherent.fullName }}</b>
                    </h4>
                </div>
                <div class="box-body">
                    <p>
                        Cette action est irr√©versible.
                    </p>
                    <div class="row">
                        <div class="col-md-1">
                            {{ form_widget(form.allow, { label: 'Refuser', attr: { class: 'btn btn-danger' } }) }}
                        </div>
                        <div class="col-md-1 col-md-offset-10">
                            {{ form_widget(form.deny, { label: 'Annuler', attr: { class: 'btn btn-warning' } }) }}
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
