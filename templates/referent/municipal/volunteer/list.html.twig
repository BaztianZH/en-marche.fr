{% extends 'referent/_layout.html.twig' %}

{% block referent_content %}
    <div class="referent__menu-list-event">
        <div class="menu-items">
            <h3><a href="{{ path('app_referent_municipal_running_mate_request') }}">Candidats colistiers</a></h3>
            <span class="separator">|</span>
            <h3>Candidats bénévoles</h3>
        </div>
    </div>

    <div id="datagrid"></div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        Kernel.onLoad(function() {
            App.runManagedList(
                [
                    {
                        key: 'gender',
                        name: 'Genre',
                    },
                    {
                        key: 'lastName',
                        name: 'Nom',
                    },
                    {
                        key: 'firstName',
                        name: 'Prénom',
                    },
                    {
                        key: 'phone',
                        name: 'Téléphone',
                    },
                    {
                        key: 'favoriteCities',
                        name: 'Ville(s) choisie(s)',
                    },
                    {
                        key: 'tags',
                        name: 'Tags de candidature',
                        className: 'municipal-candidate-tags',
                    },
                    {
                        key: 'isAdherent',
                        name: 'Adhérent ?',
                    },
                    {
                        key: 'menu',
                        name: 'Action',
                        menu: true,
                    }
                ],
                [
                    {% for request in volunteers %}
                        {% include 'application_request/municipal/_volunteer_row.js.twig' with {
                            show_route_name: 'app_referent_municipal_volunteer_request_detail',
                            edit_route_name: 'app_referent_municipal_volunteer_request_edit_tags',
                        } %},
                    {% endfor %}
                ]
            );
        });
    </script>
{% endblock %}
