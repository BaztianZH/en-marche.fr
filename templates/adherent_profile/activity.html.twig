{% block adherent_profile_content %}
    <section class="adherent-profile__section b__nudge--bottom-50" id="comittees">
        <h1 class="text--medium-large">Mes comités</h1>
        <h2 class="section-subtitle">Vos comités</h2>

        <div class="l__col">
            <article class="em-card">
                <h2 class="text--normal text--medium b__nudge--bottom-small text--breakword">En Marche - 9ème - Maubeuge Lamartine</h2>
                <div class="font-roboto">
                    <span class="text--bold b__nudge--right-small">Paris 2e</span>
                    <span>291 adhérents</span>
                </div>

                <div class="em-card__footer l__row l__row--h-stretch l__row--bottom l__row--wrap b__nudge--top">
                    <div class="l__row">
                        <a href="/comites/paris-2eme-sentier" class="btn btn--blue b__nudge--right-small">
                            Voir
