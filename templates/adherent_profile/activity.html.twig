    <section class="adherent-profile__section b__nudge--bottom-50" id="events">
        <h1 class="text--medium-large">Mes événements</h1>
        <nav class="tabs-nav b__nudge--bottom-larger">
            <ul>
                <li class="active"><a href="#" class="tabs-nav__item">À venir</a></li>
                <li><a href="#" class="tabs-nav__item">Passés</a></li>
            </ul>
